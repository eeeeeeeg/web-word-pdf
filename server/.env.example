# 服务器配置
PORT=3001
NODE_ENV=development

# 前端URL（用于CORS配置）
FRONTEND_URL=http://localhost:8080

# 文件存储配置
TEMP_DIR=./temp
MAX_FILE_SIZE=50MB
CLEANUP_INTERVAL=3600000

# Playwright配置
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# 导出配置
PDF_DEFAULT_FORMAT=A4
PDF_DEFAULT_MARGIN=1cm
WORD_DEFAULT_ORIENTATION=portrait
PPT_DEFAULT_LAYOUT=LAYOUT_16x9

# 安全配置
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 性能配置
MAX_CONCURRENT_EXPORTS=5
EXPORT_TIMEOUT=60000
