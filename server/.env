# 服务器配置
PORT=3002
NODE_ENV=development

# 前端URL（用于CORS配置）
FRONTEND_URL=http://localhost:8080

# CORS 配置
CORS_ENABLED=true
CORS_ALLOW_CREDENTIALS=true
# 多个域名用逗号分隔，包含常见的开发端口
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000,http://127.0.0.1:3000

# 文件存储配置
TEMP_DIR=./temp
MAX_FILE_SIZE=50MB
CLEANUP_INTERVAL=3600000

# Playwright配置
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# 导出配置
PDF_DEFAULT_FORMAT=A4
PDF_DEFAULT_MARGIN=1cm
WORD_DEFAULT_ORIENTATION=portrait
PPT_DEFAULT_LAYOUT=LAYOUT_16x9

# 安全配置
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 性能配置
MAX_CONCURRENT_EXPORTS=5
EXPORT_TIMEOUT=60000
